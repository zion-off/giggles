{
  "name": "giggles",
  "version": "0.2.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zion-off/giggles.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
