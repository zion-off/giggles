    "lint": "prettier --write . && eslint . --fix"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "ink": "^6.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.13",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "ink": "^6.6.0",
    "nodemon": "^3.1.11",
    "prettier": "^2.8.7",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.0.3",
    "typescript-eslint": "^8.0.0"
  }
